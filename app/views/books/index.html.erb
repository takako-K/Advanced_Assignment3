<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
  <% end %>

  <h1>New book</h1>

    <%= form_with model: @book, url:'/books', local:true do |f| %>
      <h2>Title</h2>
      <%= f.text_field :title %>
      <h2>Opinion</h2>
      <%= f.text_area :body %>
      <%= f.submit 'Create Book' %>
    <% end %>

    <% if @book.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(@book.errors.count, "error")%>
      prohibited this book from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>




<h1>Books</h1>

    <table>

      <thead>
        <tr>
          <th>Title</th>
          <th>Opinion</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td>
            <%= book.title %>
          </td>
          <td>
            <%= book.body %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>


