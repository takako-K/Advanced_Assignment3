<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
  <% end %>

  <%= render 'users/info', user: @user %>
  <%= render 'books/newform', book: @book %>

<h1>Books</h1>

    <table>

      <thead>
        <tr>
          <th>Title</th>
          <th>Opinion</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td>
            <td><%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
          </td>
          <td>
            <%= link_to book.title, book_path(book.id) %>
          </td>
          <td>
            <%= book.body %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>


